<div class="multimodal-generation">
    <form id="multimodal-form" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="content_file">{{#str}}upload_content, local_adapted{{/str}}</label>
            <input type="file" name="content_file" id="content_file" accept=".txt" required>
        </div>
        <div class="form-group">
            <label><input type="checkbox" name="generate_audio" id="generate_audio"> {{#str}}generate_audio, local_adapted{{/str}}</label>
        </div>
        <div class="form-group">
            <label><input type="checkbox" name="generate_slides" id="generate_slides"> {{#str}}generate_slides, local_adapted{{/str}}</label>
        </div>
        <div class="form-group">
            <label><input type="checkbox" name="generate_video" id="generate_video"> {{#str}}generate_video, local_adapted{{/str}}</label>
        </div>
        <input type="hidden" name="courseid" value="{{courseid}}">
        <button type="submit" class="btn btn-primary" id="convert-btn">{{#str}}convert, local_adapted{{/str}}</button>
    </form>
    <div id="status-message" class="alert alert-info mt-3" style="display: none;"></div>
    <div id="progress-container" class="mt-3" style="display: none;">
        <div class="progress">
            <div id="progress-bar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
        </div>
        <p id="progress-status" class="mt-2"></p>
    </div>
    <div id="result-links" class="mt-3" style="display: none;">
        <p id="result-files"></p>
        <button id="upload-btn" class="btn btn-success" data-job-id="{{job_id}}">{{#str}}upload_to_course, local_adapted{{/str}}</button>
        <button id="download-btn" class="btn btn-secondary">{{#str}}download, local_adapted{{/str}}</button>
    </div>
</div>